<!DOCTYPE html>
<html>
  <head>
    <title>GradeBook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="lighten-2">
    <% if current_user %>
      <% if current_user.access_level == "Teacher" %>
        <%= link_to "Profile", teacher_profile_path, class:"waves-effect waves-light btn right" %>
        <%= link_to "Log Out", logout_path, class:"waves-effect waves-light btn right" %>
      <% elsif current_user.access_level == "Student" %>
        <%= link_to "Profile", student_profile_path, class:"waves-effect waves-light btn right" %>
        <%= link_to "Log Out", logout_path, class:"waves-effect waves-light btn right" %>
      <%end%>
    <% else %>
      <%= link_to "Create Account", new_user_path, class:"waves-effect waves-light btn right" %>
      <%= link_to "Log In", login_path, class:"waves-effect waves-light btn right" %>
    <% end %>
    <br>
    <div class="container">
      <% flash.each do |name, msg| %>
        <p>
          <small> <%= name.capitalize %>: <%= msg %> </small>
        </p>
      <% end %>
    <%= yield %>
  </div>
  </body>
</html>
